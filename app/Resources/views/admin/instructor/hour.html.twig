{% extends 'base.html.twig' %}

{% block body %}
    <h3>Statystyki wykonanych jazd instruktorów</h3>
    <hr/>
    {% include('course/alert.html.twig') %}

    <div class="row">
        <div class="mx-auto col-md-6 pt-3  mb-4">
            <div class="card">
                <div class="card-header text-center text-muted">
                    Wyszukiwanie ilości godzin wg. daty
                </div>
                <div class="card-body bg-light">
                    {{ form_start(form) }}
                    <div class="form-group row">
                        <label for="role" class="col-md-4 col-form-label">Data początkowa</label>
                        <div class="col-md-8">
                            {{ form_row(form.start_time, {'attr': { 'class' : 'text-center form-control'}} ) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="role" class="col-md-4 col-form-label">Data końcowa</label>
                        <div class="col-md-8">
                            {{ form_row(form.finish_time, {'attr': { 'class' : 'text-center form-control'}} ) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.submit, {'label': 'Szukaj', 'attr': { 'class' : 'btn btn-block btn-primary rounded-0 btn-sm'}} ) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    {% if array is defined %}
    <div class="row">
        <div class="mx-auto col-md-8 pt-3  mb-4">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Instruktor</th>
                    <th scope="col">Ilość godzin szkoleniowych</th>
                </tr>
                </thead>
                <tbody>
                {% set index = 1 %}
                {% for values in array %}
                    <tr>
                        {% for key,value in values %}
                            <td scope="row">{{ index }}. </td>
                            <td>{{ value.name }} {{ value.surname }} </td>
                            <td>{{ value.hours }} </td>
                        {% endfor %}
                    </tr>
                    {% set index = index + 1%}
                {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    {% endif %}
{% endblock %}

