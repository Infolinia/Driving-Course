{% extends 'base.html.twig' %}

{% block body %}
    <h3>Lista zakończonych kursów</h3>
    <hr/>
    {% include('course/alert.html.twig') %}
    {% if (array is defined and array|length > 0) %}
        <div class="row">
            <div class="mx-auto col-md-8 pt-3  mb-4">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Kursant</th>
                        <th scope="col">Instruktor</th>
                        <th scope="col">Kategoria</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for a in array %}
                        <tr>
                            <td scope="row">{{ loop.index }}. </td>
                            <td scope="row">{{  a.participantFirstName}} {{  a.participantLastName}}</td>
                            <td scope="row">{{  a.instructorFirstName}} {{  a.instructorLastName}}</td>
                            <td scope="row">{{  a.courseCategory}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="col-md-12 alert alert-warning" role="alert">
            Aktualnie nikt nie ukończył żadnego kursu.<br/>
        </div>
{% endif %}
{% endblock %}

