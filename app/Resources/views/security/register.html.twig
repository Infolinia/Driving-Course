{% extends 'base.html.twig' %}

{% block body %}
    <h3>Rejestracja</h3>
    <hr/>
    {% include('course/alert.html.twig') %}
    <div class="row">
        <div class="mx-auto col-md-6 pt-3  mb-4">
            <div class="card">
                <div class="card-header text-center text-muted">
                    Formularz rejestracji
                </div>
                <div class="card-body bg-light">
                    <div class="font-weight-normal text-muted">Dane logowania</div>
                    <hr class="mt-1"/>
                    <ul>
                        {% for error in form.vars.errors.form.getErrors(true) %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                        {{ form_start(form) }}


                    <div class="form-group">
                        {{ form_row(form.user.username, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Login'}} ) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.user.plainPassword.first, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Hasło'}} ) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.user.plainPassword.second, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Potwierdź hasło'}} ) }}
                    </div>
                    <div class="font-weight-normal text-muted mt-4">Dane osobowe</div>
                    <hr class="mt-1"/>
                    <div class="form-group">
                        {{ form_row(form.details.first_name, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Imię'}} ) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.details.last_name, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Nazwisko'}} ) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.details.street, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Ulica'}} ) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.details.city, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Miasto'}} ) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.details.post_code, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Kod pocztowy'}} ) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.details.phone_number, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Numer telefonu'}} ) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.details.email.first, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Email'}} ) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.details.email.second, {'attr': { 'class' : 'text-center form-control form-control-sm rounded-0', 'placeholder':'Potwierdź email'}} ) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.submit, {'label': 'Zarejestruj się', 'attr': { 'class' : 'btn btn-block btn-primary rounded-0 btn-sm'}} ) }}
                    </div>
                    <div class="form-group">
                        <div class="text-center"><a href="{{ path('security_login') }}">Masz już konto? Zaloguj się!</a></div>
                    </div>
                        {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

